<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Restaurant</title>
    <script type="text/javascript">

function validate() {
   let elements = document.getElementsByClassName("fn");
   let btn = document.getElementById("edit").value;
   if(btn == "Save"){
      document.getElementById("editform").submit();

   }
   else{
    document.getElementById("edit").value="Save";
       for(let i=0; i<elements.length; i++) { 
        elements[i].disabled = !elements[i].disabled;
    }  
   }
    

}
</script>

</head>
<body>
  <div class="container">
     <%- include("navBar.ejs") %>

  <div class="row">
       <div class="row" style="margin-top: 20px;">
    
    <h1> RESTAURANT INFORMATION   <input style="float: right;" type=button class="btn btn-info" value="Edit" id="edit" onclick="return validate()"/> </h1>  

  </div>

    <form action="<%= '/restaurants/update/' + r.restID %>" id="editform" method="POST">

        <div class="row">
          <input  disabled="true" value= "<%=r.restID %>" name="restID" type="hidden" class="form-control fn" />
        </div>

        <div style="padding:3px; margin: 10px;"  class="row">

        <div class="row">
          <h4>LOCATION:</h4>
          <div class="col-sm-12 col-lg-6">
              <label class="form-label  " 
                >Name:
                <input size="50"  required="true" name="name" type="text" class="fn form-control form-control-lg" disabled="true" value= "<%=r.name %>"
              /></label>
            
          </div>
             <div class="col-sm-12 col-lg-6"> 
          <label class="form-label">Address:
            <input
               size="50"
              disabled="true" value= "<%=r.address %>"
              required="true"
              name="address"
              type="text"
              class="form-control form-control-lg  fn"
          /></label>
        </div>       

        </div>
          
        

      <div class="row">

        <div class="col-sm-12 col-lg-6"> 
              <label class="form-label"
              >City:
              <input
                disabled="true" value= "<%=r.city%>"
                required="true"
                name="city"
                type="text"
                class="form-control form-control-lg fn"
            /></label>

        </div>

        <div class="col-sm-12 col-lg-6"> 
            <label class="form-label"
              >State:
              <input
                disabled="true" value= "<%=r.state%>"
                required="true"
                name="state"
                type="text"
                class="form-control form-control-lg fn"
            /></label>

        </div>        
      </div>
          <div class="row">

        <div class="col-sm-12 col-lg-6"> 
            <label class="form-label"
              >Country:
              <input
                disabled="true" value= "<%=r.country%>"
                required="true"
                name="country"
                type="text"
                class="form-control form-control-lg fn"
            /></label>


        </div>

        <div class="col-sm-12 col-lg-6"> 
            
            <label class="form-label"
              >ZIP:
              <input
               
                disabled="true" value= "<%=r.zip %>"
                required="true"
                name="zip"
                type="text"
                class="form-control form-control-lg  fn"
            /></label>

        </div>        
      </div>
    

        <div style="margin-top: 50px;" class="mb-3 row">
 
          <div class="col-lg-6 col-sm-12">
          
          <h4>WORKING TIMINGS:</h4>

          <div class="row">
            <div class="col-lg-6 col-sm-6">
            <label class="form-label"
              >OPEN HOURS
              <input
                disabled="true" value= "<%=r.openHours%>"
                required="true"
                name="openHours"
                type="text"
                class="form-control fn"
            ></label>
          </div>
            <div class="col-lg-6 col-sm-6">
            <label class="form-label"
             >CLOSE HOURS
              <input
                disabled="true" value= "<%=r.closeHours%>" 
                required="true"
                name="closeHours"
                type="text"
                class="form-control fn"
            ></label>
          </div>
            </div>

          </div>

        <div class="col-lg-6 col-sm-12">
          <h4>PRICE RANGE:</h4>
          <div class="row">
            <div class="col-lg-6 col-sm-6">
            <label class="form-label"
              >MINIMUM PRICE RANGE
              <input
                disabled="true" value= "<%=r.priceRangeMin%>"
                required="true"
                name="priceRangeMin"
                type="number"
                class="form-control fn"
            /></label>
          </div>
            <div class="col-lg-6 col-sm-6">
            <label class="form-label"
              >MAXIMUM PRICE RANGE
              <input
                disabled="true" value= "<%=r.priceRangeMax%>"
                required="true"
                name="priceRangeMax"
                type="number"
                class="form-control fn"
            /></label>
          </div>
          </div>
      </div>
     </div>

     <div style="margin-top: 20px;" class="row">
            <h3>DRESS PREFERENCE <%= r.dressCodeID %></h3>

            <div class="col-lg-3">
            <% if(r.dressCodeID == 1){%>
            <input disabled="true" type="radio" name="dressCodeID" id="gridRadios1" value="1" checked class="fn"/>
            <label for="gridRadios1"> No Preference </label>
            <% } else {%>
            <input disabled="true" type="radio" name="dressCodeID" id="gridRadios1" value="1" class="fn"/>
            <label for="gridRadios1"> No Preference </label>   <% }%>          
          </div>
          <div class="col-lg-3">
              <% if(r.dressCodeID ==2){%>
            <input disabled="true" type="radio" name="dressCodeID" id="gridRadios2" value="2" checked class="fn" />
            <label for="gridRadios2"> Informal </label>  <% }else{%>
             <input disabled="true" type="radio" name="dressCodeID" id="gridRadios2" value="2" class="fn" />
            <label for="gridRadios2"> Informal </label>  <% }%>           
          </div>
          <div class="col-lg-3">
             <% if(r.dressCodeID == 3){%>
            <input disabled="true" type="radio" name="dressCodeID" id="gridRadios3" value="3" checked class="fn" />
            <label for="gridRadios3"> Formal </label><% }else{%>
             <input disabled="true" type="radio" name="dressCodeID" id="gridRadios3" value="3" class="fn" />
            <label for="gridRadios3"> Formal </label><% }%>           
          </div>
          <div class="col-lg-3"> 
            <% if(r.dressCodeID == 4){%>
            <input disabled="true" type="radio" name="dressCodeID" id="gridRadios3" value="3" checked class="fn" />
            <label for="gridRadios3"> Elegant </label><% }else{%>
            <input disabled="true" type="radio" name="dressCodeID" id="gridRadios3" value="3" class="fn" />
            <label for="gridRadios3"> Elegant </label><% }%>
          </div>       

     </div>
    </div>
           

      </form>

    </div>
    

</div>

</body>
</html>

